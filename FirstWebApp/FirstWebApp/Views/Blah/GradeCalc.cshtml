@{
    ViewData["Title"] = "Grade Calculator";
    ViewData["HeroText"] = "Grade Calculator";
    ViewData["HeroSubText"] = "What's the damage?";
}

@model GradeCalcModel;

<div class="form" method="post">
    <h2>Grade Calculator</h2>
    <label>Assignments: </label>
    <input id="assignment" asp-for="Ass" type="number" /><br />
    <label>Group Project: </label>
    <input id="project" asp-for="Proj" type="number" /><br />
    <label>Quizzes: </label>
    <input id="quiz" asp-for="Quiz" type="number" /><br />
    <label>Exams: </label>
    <input id="exam" asp-for="Exam" type="number" /><br />
    <label>INTEX: </label>
    <input id="intex" asp-for="Intex" type="number" /><br />
    <button type="submit" id="submit">Get Letter Grade</button>

    <div asp-validation-summary="All"></div>
</div>

